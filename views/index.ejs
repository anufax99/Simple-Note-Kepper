<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="px-5 py-2 bg-zinc-800 block w-full rounded-md outline-none" type="text" name="title" placeholder="Title Goes Here">
                <textarea class="px-5 py-2 mt-2 bg-zinc-800 block w-full rounded-md outline-none resize-none" name="details" id="" placeholder="Write your task details here"></textarea>
                <input class="mt-2 bg-[#318CE7] p-2 rounded-md" type="submit" name="" id="" value="create task">
            </form>
        </div>
        <div class="task flex flex-wrap gap-5 items-center p-10">

            <% if(FILES.length != 0){ %>
                <% FILES.forEach(element => { %>
                    <div class="task min-w-50 px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-3xl tracking-tighter"><%= element %></h1>
                        <div class="mt-3 flex gap-4 justify-between items-center">
                            <a class="text-[#318CE7] inline-block" href="/file/<%= element %> ">Read More.</a>
                            <a class="text-zinc-400" href="/edit/<%= element %>">Edit</a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <h1 class="text-zinc-100">No task yet</h1>
            <% } %>

        </div>  
    </div>


    <script src="javascripts/scripts.js"></script>
    
</body>
</html>